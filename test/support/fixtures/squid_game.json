{
    "constructs": [
        {
            "type": "spawn_plane",
            "name": "initial",
            "description": "You start here",
            "params": {
                "position": {
                    "x": 2,
                    "y": 15,
                    "z": -3
                },
                "length": 3,
                "width": 3
            }
        },
        {
            "type": "opt_in_sign",
            "name": "welcome_sign",
            "description": "Introduce the space",
            "params": {
                "text1": "Point and click here when ready to play next game of red light green light",
                "text2": "Stand by, waiting for players and next game to start",
                "text3": "Get ready.  Next game is starting.",
                "min_players": 1,
                "debounce_sec": 5
            }
        },
        {
            "type": "spawn_plane",
            "name": "game_start",
            "description": "red light green light starting point",
            "params": {
                "position": {
                    "x": 0,
                    "y": 0,
                    "z": 0
                },
                "length": 10,
                "width": 10
            }
        },
        {
            "type": "game_countdown",
            "name": "game_counter",
            "description": "Used to show user how much time on the game is left",
            "params": {
                "duration_in_sec": 20
            }
        },
        {
            "type": "state_loop",
            "name": "red light green light loop",
            "description": "changes state between red and green light",
            "params": {
                "states": [
                    "green_light",
                    "red_light"
                ],
                "initial_durations_sec": [
                    6,
                    4
                ],
                "random_gradual_decay": true
            }
        },
        {
            "type": "signal_to_action",
            "name": "on_green_light",
            "description": "what should happen when state becomes green light",
            "params": {
                "on_message": "green_light",
                "actions": [
                    {
                        "type": "animate_once",
                        "params": {
                            "mesh_name": "head",
                            "property": "rotation.y",
                            "from": 0,
                            "to": 180,
                            "duration_ms": 1000
                        }
                    },
                    {
                        "type": "play_sound_once",
                        "params": {
                            "mesh_name": "head",
                            "url": "...mp3"
                        }
                    },
                    {
                        "type": "deactivate",
                        "params": {
                            "target_name": "death_by_motion"
                        }
                    }
                ]
            }
        },
        {
            "type": "signal_to_action",
            "name": "on_red_light",
            "description": "what should happen when state becomes red light",
            "params": {
                "on_message": "red_light",
                "actions": [
                    {
                        "type": "animate_once",
                        "params": {
                            "mesh_name": "head",
                            "property": "rotation.y",
                            "from": 180,
                            "to": 0,
                            "duration_ms": 1500
                        }
                    },
                    {
                        "type": "play_sound_once",
                        "params": {
                            "mesh_name": "head",
                            "url": "...mp3"
                        }
                    },
                    {
                        "type": "activate",
                        "params": {
                            "target_name": "death_by_motion"
                        }
                    }
                ]
            }
        },
        {
            "type": "motion_sensor",
            "name": "death_by_motion",
            "description": "kills players that are moving on green light",
            "params": {}
        }
    ]
}
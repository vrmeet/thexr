{
  "name": "thexr_assets",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "node esbuild.js",
    "deploy": "node esbuild.js --deploy && npm run sys",
    "watch": "node esbuild.js --watch",
    "sys": "esbuild `find js/ecs/pluggable_systems -name '*.ts'` --outdir=../priv/static/systems --target=es2016",
    "watchsys": "esbuild `find js/ecs/pluggable_systems -name '*.ts'` --outdir=../priv/static/systems --target=es2016 --watch",
    "typecheck": "tsc --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test:build": "node spec/support/build-tests.js",
    "test:watch": "node spec/support/build-tests.js --watch",
    "test:runner": "jasmine-browser-runner serve"
  },
  "dependencies": {
    "@fal-works/esbuild-plugin-global-externals": "^2.1.2",
    "@urql/svelte": "^1.3.3",
    "agora-rtc-sdk-ng": "^4.14.0",
    "ammojs-typed": "^1.0.6",
    "babylonjs": "^5.7.0",
    "babylonjs-gui": "^5.7.0",
    "babylonjs-materials": "^5.7.0",
    "graphql": "^16.3.0",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "rxjs": "^7.5.4",
    "svelte-forms-lib": "^2.0.1",
    "typed-rx-emitter": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jasmine": "^4.3.0",
    "@types/node": "^18.11.9",
    "@types/phoenix": "^1.5.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "esbuild": "^0.14.8",
    "esbuild-svelte": "^0.6.2",
    "eslint": "^8.22.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "fs": "^0.0.1-security",
    "gaze": "^1.1.3",
    "jasmine-browser-runner": "^1.2.0",
    "jasmine-core": "^4.5.0",
    "prettier": "^2.7.1",
    "svelte-check": "^2.3.0",
    "svelte-preprocess": "^4.10.2",
    "tslib": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
